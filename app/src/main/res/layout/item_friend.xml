<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/padding_8dp"
    app:cardCornerRadius="@dimen/padding_10dp"
    android:layout_margin="@dimen/padding_10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_item_fragment_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_usericon_fragment_friend"
            android:layout_width="@dimen/padding_50dp"
            android:layout_height="@dimen/padding_50dp"
            android:layout_margin="@dimen/padding_10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_dog"/>

        <TextView
            android:id="@+id/tv_nickname_fragment_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test"
            android:textSize="@dimen/text_size_20sp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>