<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20sp"
            android:gravity="center"
            android:text="@string/app_name" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/padding_10dp"
        android:elevation="@dimen/padding_10dp"
        app:cardCornerRadius="@dimen/padding_10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <club.zhangyuyang.kuakua.fwk_view.assets.BottomBarItem1
                android:id="@+id/item_bottom_bar_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <club.zhangyuyang.kuakua.fwk_view.assets.BottomBarItem2
                android:id="@+id/item_bottom_bar_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <club.zhangyuyang.kuakua.fwk_view.assets.BottomBarItem3
                android:id="@+id/item_bottom_bar_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <club.zhangyuyang.kuakua.fwk_view.assets.BottomBarItem4
                android:id="@+id/item_bottom_bar_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>